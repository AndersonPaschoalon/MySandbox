using namespace std;

int main() {

	bool tcp = true;
	std::string valval =
			(tcp == true) ?
					std::string("") + std::string("a") + std::string("b") :
					"udp";
	std::cout << "Hello: " << valval << std::endl;

	char binfile[] = "/bin/ls";
	//char command[3][1024];
	char command[] = "ls -lahn";
	char opts[] = " -lahn ";
	int status;

	if (fork() == 0) {
		execl ("/bin/ls", "ls", "-1", (char *)0);
		//execl(binfile, command, "", (char *) 0);
	} else {
		wait (&status);

	}
	std::cout << "command[0]:" << command[0] << "\ncommand[1]:" << command[1];

	return 0;
}
