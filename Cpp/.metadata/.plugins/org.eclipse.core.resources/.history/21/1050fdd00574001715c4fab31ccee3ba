#include <iostream>
#include "TraceDbManager.h"
#include "Database.h"

using namespace std;

int main()
{
	Database db = Database("dtabase-name.db");

	std::string arg1 = "";
	std::string arg2 = "";
	std::string arg3 = "";
	std::string arg4 = "";
	std::list<std::string> str_list;
	std::list<double> d_list;
	std::list<int> i_list;


	printf("\n\nstr");

	db.get(arg1,arg2, str_list );
	printList(str_list);
	str_list.clear();

	db.get_where(arg1,arg2, arg3, str_list );
	printList(str_list);
	str_list.clear();

	db.join(arg1,arg2, arg3, arg4, str_list );
	printList(str_list);
	str_list.clear();

	printf("\n\nint");

	db.get(arg1,arg2, i_list );
	printList(i_list);
	i_list.clear();

	db.get_where(arg1,arg2, arg3, i_list );
	printList(i_list);
	i_list.clear();

	db.join(arg1,arg2, arg3, arg4, i_list );
	printList(i_list);
	i_list.clear();

	printf("\n\ndouble");

	db.get(arg1,arg2, d_list );
	printList(d_list);
	d_list.clear();

	db.get_where(arg1,arg2, arg3, d_list );
	printList(d_list);
	d_list.clear();

	db.join(arg1,arg2, arg3, arg4, d_list );
	printList(d_list);
	d_list.clear();


	return 0;
}
