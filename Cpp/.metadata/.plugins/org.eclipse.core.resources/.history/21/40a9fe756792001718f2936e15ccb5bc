#include <iostream>
using namespace std;

int main() {

		bool tcp = false;

		std::string valval = (tcp == true)? "" : "udp";
		std::cout << "Hello: " << valval << std::endl;

		std::string printS = "as-> " + valval + " ->" + (tcp == true)? "***" : "+++" + "\n";

		return 0;
}
