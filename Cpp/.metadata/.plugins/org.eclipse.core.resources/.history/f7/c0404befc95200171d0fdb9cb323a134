#include <log4cpp/Category.hh>
#include <log4cpp/FileAppender.hh>
#include <log4cpp/PropertyConfigurator.hh>
#include <string>
//using namespace std;


int main() {

	log4cpp::PropertyConfigurator::configure("src/log4cpp-config.properties");
	log4cpp::Category console = log4cpp::Category::getRoot();

	log4cpp::Category::shutdown();

	return 0;
}
