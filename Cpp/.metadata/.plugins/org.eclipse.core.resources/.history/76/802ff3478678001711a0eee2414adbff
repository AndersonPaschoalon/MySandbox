#include <iostream>
#include <string>
#include "CSVIterator.h"
using namespace std;

class CsvFile{
public:
	CsvFile(const char* filename): _file{

	}

	void reset(){

	}

	bool next_line()
	{
		return true;
	}

	std::string column(uint i){
		return"";
	}


private:
	std::string _filename;
	CSVIterator _loop;
	std::ifstream _file;

};

int main()
{
	std::ifstream file("plop.csv");

	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		std::cout << "4th Element(" << (*loop)[3] << ")\n";
	}

	file.close();

	printf("------------------\n");
	file.open("plop.csv");

	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		std::cout << "4th Element(" << (*loop)[3] << ")\n";
	}

	file.close();
	printf("------------------\n");
	file.open("plop.csv");

	std::string str;
	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		str = (*loop)[9];

		std::cout << "4th Element(" << str << ")\n";
	}


}
