#include <iostream>
#include "MesserLog.h"

using namespace std;


int main() {
	log4cpp::PropertyConfigurator::configure("src/log4cpp-config.properties");
	log4cpp::Category& console = log4cpp::Category::getInstance("console");


	console.debug("Uma mensagem aqui");

	log4cpp::Category::shutdown();
	return 0;
}
