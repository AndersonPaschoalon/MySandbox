#include <iostream>
#include "CSVIterator.h"
using namespace std;

class Csv{
public:

private:

};

int main()
{
	std::ifstream file("plop.csv");

	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		std::cout << "4th Element(" << (*loop)[3] << ")\n";
	}

	file.close();

	printf("------------------\n");
	file.open("plop.csv");

	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		std::cout << "4th Element(" << (*loop)[3] << ")\n";
	}

	file.close();
	printf("------------------\n");
	file.open("plop.csv");

	std::string str;
	for (CSVIterator loop(file); loop != CSVIterator(); ++loop)
	{
		str = (*loop)[3];

		std::cout << "4th Element(" << str << ")\n";
	}


}
