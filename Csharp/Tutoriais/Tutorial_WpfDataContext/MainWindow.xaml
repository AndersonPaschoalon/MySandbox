<Window x:Class="Tutorial_WpfDataContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutorial_WpfDataContext"
        xmlns:src="clr-namespace:Tutorial_WpfDataContext"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--
    <Grid DataContext="{Binding Path=EmployeeNameTest}">
    -->
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="TextBlock1" Grid.Row="1" Text="{Binding Path=EmployeeNameTest.EmployeeName}"/>
        <TextBlock Name="TextBlock2" Grid.Row="2" Text="{Binding Path=EmployeeNameTest.State}"/>
        <TextBlock Name="TextBlock3" Grid.Row="3" Text="{Binding Path=EmployeeName}"/>
        <TextBlock Name="TextBlock4" Grid.Row="4" Text="{Binding Path=State}"/>
    </Grid>
    
</Window>
